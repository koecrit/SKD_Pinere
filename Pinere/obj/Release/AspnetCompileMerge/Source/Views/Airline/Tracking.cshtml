</div>
@section Scripts
{
    <script type="text/javascript">
        $(document).ready(function () {
            if ('@User.IsInRole("airline")' == "True") {
                $("#NamaAirline").val('@ViewBag.responsibleId');
                $("#NamaAirlineDis").val('@ViewBag.responsibleName');
              }
            $('#WaktuBerangkat').datepicker({
                dateFormat: 'dd-M-yy',
                changeMonth: true,
                changeYear: true,
                buttonText: "Select date"
            });
            $("#btnCariKotaAsal").click(function () {
                $("#TipeKotaTemp").val("Asal");
                $('#dialogKota').modal('show');
            });
            $("#btnCariKotaTujuan").click(function () {
                $("#TipeKotaTemp").val("Tujuan");
                $('#dialogKota').modal('show');
            });
            var tablex = $('#tblKota').DataTable({
                "bInfo": true,
                "bServerSide": true,
                "sAjaxSource": '@Url.Action("GetKota")',
            "aoColumns":
            [
                { "mData": "Code", "sClass": "center" },
                { "mData": "Name" },
                { "mData": "Country" }
            ],
            "fnServerData": function (sSource, aoData, fnCallback) {
                $.ajax({
                    dataType: 'json',
                    global: false,
                    type: "GET",
                    url: sSource,
                    data: aoData,
                    beforeSend: function () {
                        $("#loadingKotaIndicator").show();
                    },
                    complete: function () {
                        $("#loadingKotaIndicator").hide();
                    },
                    error: function () {
                        $("#tblKota > tbody").html("<tr class='odd'><td colspan='6' class='center'>Sorry, we encounter a problem when trying to load department list from the server.</td></tr>");
                    },
                    success: fnCallback
                });
            }
        });
            $('#tblKota tbody').on('click', 'tr', function () {
                var data = tablex.row(this).data();
                if ($("#TipeKotaTemp").val() == "Asal") {
                    $('#KotaAsal').val(data["Code"]);
                    $('#KotaAsalDis').val(data["Name"]);
                } else if ($("#TipeKotaTemp").val() == "Tujuan") {
                    $('#KotaTujuan').val(data["Code"]);
                    $('#KotaTujuanDis').val(data["Name"]);
                }
                $("#dialogKota").modal('hide');
            });

            $("#btnHapusKotaAsal").click(function () {
                $('#KotaAsal').val('');
                $('#KotaAsalDis').val('');
            });
            $("#btnHapusKotaTujuan").click(function () {
                $('#KotaTujuan').val('');
                $('#KotaTujuanDis').val('');
            });
            $("#btnCariAirline").click(function () {
                $('#dialogAirline').modal('show');
            });
            var tablea = $('#tblAirline').DataTable({
                "bInfo": true,
                "bServerSide": true,
                "sAjaxSource": '@Url.Action("GetMaskapai")',
            "aoColumns":
            [
                { "mData": "Id" },
                { "mData": "Name" },
                { "mData": "Country" }
            ],
            "fnServerData": function (sSource, aoData, fnCallback) {
                $.ajax({
                    dataType: 'json',
                    global: false,
                    type: "GET",
                    url: sSource,
                    data: aoData,
                    beforeSend: function () {
                        $("#loadingMaskapaiIndicator").show();
                    },
                    complete: function () {
                        $("#loadingMaskapaiIndicator").hide();
                    },
                    error: function () {
                        $("#tblAirline > tbody").html("<tr class='odd'><td colspan='6' class='center'>Sorry, we encounter a problem when trying to load department list from the server.</td></tr>");
                    },
                    success: fnCallback
                });
            }
        });
        $('#tblAirline tbody').on('click', 'tr', function () {
            var data = tablea.row(this).data();
            $('#NamaAirline').val(data["Id"]);
            $('#NamaAirlineDis').val(data["Name"]);
            $("#dialogAirline").modal('hide');
        });
        $("#btnHapusAirline").click(function () {
            $('#NamaAirline').val('');
            $('#NamaAirlineDis').val('');
        });
        $("#PenumpangSakitList").change(function () {
            $("#PenumpangSakit").val($("#PenumpangSakitList").val());
        });

        var tabled = $('#tblData').DataTable({
            "bInfo": true,
            "bPaginate": true,
            "bFilter": false,
            "bProcessing": false,
            "sPaginationType": "full_numbers",
            "sAjaxSource": '@Url.Action("GetResultData")',
                "aoColumns": [
                       { "mData": "WaktuBerangkat", "sClass": "text-center" },
                   { "mData": "NomorPenerbangan" },
                { "mData": "NamaAirline" },
                   { "mData": "KotaAsal" },
                   { "mData": "KotaTujuan" },
                   { "mData": "PenumpangSakit", "sClass": "text-center" },
                   {
                       "mData": function (source, type, val) {
                           return "<a class=\"btn btn-success btn-xs\" href='" + source.ActionEdit + "' target='_blank'>View</a>";
                       }, "sClass": "text-center"
                   }
                ],
                "fnServerData": function (sSource, aoData, fnCallback) {
                    aoData.push(
                        { "name": "search", "value": $('#Search').val() },
                        { "name": "airline", "value": $('#NamaAirline').val() },
                        { "name": "nomorPenerbangan", "value": $('#NomorPenerbangan').val() },
                        { "name": "kotaAsal", "value": $('#KotaAsal').val() },
                        { "name": "kotaTujuan", "value": $('#KotaTujuan').val() },
                        { "name": "waktuBerangkat", "value": $('#WaktuBerangkat').val() },
                        { "name": "penumpangSakit", "value": $('#PenumpangSakit').val() }
                    );
                    $.ajax({
                        dataType: 'json',
                        global: false,
                        type: "GET",
                        url: sSource,
                        data: aoData,
                        beforeSend: function () {
                            $("#loadingResult").show();
                        },
                        complete: function () {
                            $("#loadingResult").hide();
                            //$("input[type=button], button").button();
                        },
                        error: function () {
                            $("#tblData > tbody").html("<tr class='odd'><td colspan='12' class='center'>Sorry, we encounter a problem when trying to search career resume from the server.</td></tr>");
                        },
                        success: fnCallback
                    });
                }
            });
            $("#btnClear").click(function () {
                $('#NamaAirline').val('');
                $('#NamaAirlineDis').val('');
                $('#NomorPenerbangan').val('');
                $("#KotaAsal").val('');
                $("#KotaAsalDis").val('');
                $("#KotaTujuan").val('');
                $("#KotaTujuanDis").val('');
                $("#WaktuBerangkat").val('');
                $("#PenumpangSakitList").val('');
            });
        $("#btnSearch").click(function () {
            $('#Search').val('True');
            tabled.ajax.reload();
        });

    });
    </script>
}