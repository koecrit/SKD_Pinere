@model Pinere.Models.User 

@{
    ViewBag.Title = "Login";
}
@using (Html.BeginForm())
{
    
    <div class="page-header text-center">Selamat Datang di Sistem Kewaspadaan Dini Penyakit Infeksi New-Emerging dan Re-Emerging (SKD PINERE)</div>
     <div class="row" >
         <div class="col-md-offset-4 col-md-4">
             <div class="panel panel-info" style="border-color:blue">
          <div class="panel-heading">
            <h3 class="panel-title text-center">Login</h3>
          </div>
          <div class="panel-body">
            <div class="form-horizontal" style="padding:10px">
                <div class="form-group">
                    @Html.TextBoxFor(o => o.Username, new { @class = "form-control input-sm chat-input", @placeholder = "Username"})
                    @Html.ValidationMessageFor(o=>o.Username)
                </div>
                <div class="form-group">
                    @Html.PasswordFor(o=>o.Password, new {@class = "form-control input-sm chat-input", @placeholder="Password"})
                </div>
                <div class="form-group">
                        <button type="submit" class="btn btn-primary btn-md" style="width:100%">Masuk</button>     
                </div>
                <div class="row">
                    @Html.ValidationSummary(true, "", new { @style = "color:red"})
                </div>
            </div>
          </div>
        </div>
         </div>
    </div>
}